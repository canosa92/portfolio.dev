---
const personalImageAlt = "Adrian Canosa";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import GithubIcon from "@/components/icons/GitHub.astro";
---


<section class="relative py-16 max-w-6xl mx-auto">
  <div class="grid gap-12 md:grid-cols-5 items-center">
    <!-- Imagen y redes sociales -->
    <div class="md:col-span-2 flex flex-col items-center space-y-6">
      <div class="relative">
        <img
          class="rounded-full w-40 sm:w-48 aspect-square object-cover shadow-2xl 
                 ring-4 ring-yellow-300 dark:ring-yellow-500 
                 transform transition hover:scale-105 duration-300"
          alt={personalImageAlt}
          src="/adrian-entero.jpg"
        />
        <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-yellow-500/20 to-transparent"></div>
      </div>
      
      <nav class="flex gap-6 mt-8">
        <SocialPill 
          href="mailto:adrian.canosa1992@gmail.com" 
          class="transform transition-all duration-300 hover:scale-110 hover:text-yellow-500"
        >
          <MailIcon class="w-7 h-7" />
        </SocialPill>
        <SocialPill 
          href="https://linkedin.com/in/adrian-canosa" 
          class="transform transition-all duration-300 hover:scale-110 hover:text-blue-500"
        >
          <LinkedInIcon class="w-7 h-7" />
        </SocialPill>
        <SocialPill 
          href="https://github.com/canosa92" 
          class="transform transition-all duration-300 hover:scale-110 hover:text-gray-800 dark:hover:text-gray-200"
        >
          <GithubIcon class="w-7 h-7" />
        </SocialPill>
      </nav>
    </div>

    <!-- Título y descripción -->
    <div class="md:col-span-3 space-y-6">
      <div class="prose prose-lg dark:prose-invert">
        <h1 class="text-4xl sm:text-5xl font-black tracking-tight text-gray-800 dark:text-white
                   bg-gradient-to-r from-yellow-500 to-yellow-300 dark:from-yellow-300 dark:to-yellow-500 
                   bg-clip-text text-transparent animate-gradient">
          Hola, soy Adrián Canosa
        </h1>
        <p class="mt-6 text-lg sm:text-xl leading-relaxed text-gray-700 dark:text-gray-300">
          <span class="font-bold text-yellow-600 dark:text-yellow-400">
            Desarrollador y programador FullStack
          </span> 
          con experiencia en la creación de aplicaciones web utilizando tecnologías modernas como
          <span class="font-bold text-yellow-600 dark:text-yellow-400">
            ASTRO, TYPESCRIPT, FIREBASE y el stack MERN.
          </span>
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  .animate-gradient {
    background-size: 200% auto;
    animation: gradient 4s ease infinite;
  }
</style>