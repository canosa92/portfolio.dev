---
const personalImageAlt = "Adrian Canosa"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
import GithubIcon from "@/components/icons/GitHub.astro"
---

<div class="relative max-w-xl mx-auto">
  <!-- Imagen y estado -->
  <div class="flex gap-4 items-center mb-6">
    <img
      class="rounded-full shadow-lg w-16 h-16"
      alt={personalImageAlt}
      src="../public/adrian.png"
    />
    <a 
      href="https://linkedin.com/in/adrian-canosa"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center transition transform hover:scale-105"
    >
      <Badge>Disponible para tus proyectos</Badge>
    </a>
  </div>

  <!-- Título y descripción -->
  <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
    Hola, soy Adrián Canosa
  </h1>
  <p class="mt-4 text-lg leading-relaxed text-gray-700 dark:text-gray-300">
    <strong class="text-yellow-500 dark:text-yellow-300 font-semibold">
      Desarrollador y programador FullStack
    </strong> con experiencia en el desarrollo de aplicaciones web utilizando tecnologías como 
    <strong class="text-yellow-500 dark:text-yellow-300 font-semibold">
      ASTRO, TYPESCRIPT, FIREBASE y el stack MERN
    </strong>.
  </p>

  <!-- Navegación de redes sociales -->
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:adrian.canosa1992@gmail.com">
      <MailIcon class="w-4 h-4" />
      adrian.canosa1992@gmail.com
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/adrian-canosa">
      <LinkedInIcon class="w-4 h-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/canosa92">
      <GithubIcon class="w-4 h-4" />
      Github
    </SocialPill>
  </nav>

  <!-- Indicador de scroll -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2">
    <div class="flex flex-col items-center animate-bounce">
      <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">
        Explora mi trabajo
      </p>
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        class="w-6 h-6 text-gray-500 dark:text-gray-400"
        fill="none" 
        viewBox="0 0 24 24" 
        stroke="currentColor"
      >
        <path 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          stroke-width="2" 
          d="M19 14l-7 7m0 0l-7-7m7 7V3"
        />
      </svg>
    </div>
  </div>
</div>

<style>
  @keyframes scroll-bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(10px);
    }
  }

  .animate-bounce {
    animation: scroll-bounce 2s infinite;
  }
</style>

<script>
  // Smooth scroll cuando se hace clic en el indicador
  document.querySelector('.animate-bounce')?.addEventListener('click', () => {
    window.scrollTo({
      top: window.innerHeight,
      behavior: 'smooth'
    });
  });

  // Ocultar el indicador durante el scroll
  window.addEventListener('scroll', () => {
    const scrollIndicator = document.querySelector('.animate-bounce');
    if (window.scrollY > 100) {
      scrollIndicator?.classList.add('opacity-0', 'pointer-events-none');
    } else {
      scrollIndicator?.classList.remove('opacity-0', 'pointer-events-none');
    }
  });
</script>
